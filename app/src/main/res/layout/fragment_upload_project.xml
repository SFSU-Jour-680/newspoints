<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Google Drive -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_uploadProj_googleDrive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_large"
        android:layout_marginLeft="@dimen/view_dimen_small"
        android:layout_marginRight="@dimen/view_dimen_small"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:padding="@dimen/view_dimen_large"
        card_view:cardBackgroundColor="@color/colorSecondaryTemp"
        card_view:cardCornerRadius="@dimen/view_dimen_small"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_uploadProj_googleDrive_main"
                android:layout_width="@dimen/widget_dimen_X2_large"
                android:layout_height="@dimen/widget_dimen_X2_large"
                android:layout_centerInParent="true"
                android:src="@drawable/gdrive_product256"/>

            <TextView
                android:id="@+id/textView_uploadProj_googleDrive_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_uploadProj_googleDrive_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_dimen_small"
                android:text="@string/text_uploadProject_googleDrive"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/font_small"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!-- Dropbox-->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_uploadProj_dropbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_large"
        android:layout_marginBottom="@dimen/view_dimen_large"
        android:layout_marginLeft="@dimen/view_dimen_small"
        android:layout_marginRight="@dimen/view_dimen_small"
        android:layout_marginTop="@dimen/view_dimen_large"
        android:padding="@dimen/view_dimen_large"
        card_view:cardBackgroundColor="@color/colorSecondaryTemp"
        card_view:cardCornerRadius="@dimen/view_dimen_small"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_uploadProj_dropbox_main"
                android:layout_width="@dimen/widget_dimen_X2_large"
                android:layout_height="@dimen/widget_dimen_X2_large"
                android:layout_centerInParent="true"
                android:src="@drawable/dropbox_android"/>

            <TextView
                android:id="@+id/textView_uploadProj_dropbox_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_uploadProj_dropbox_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_dimen_small"
                android:text="@string/text_uploadProject_dropbox"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/font_small"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
