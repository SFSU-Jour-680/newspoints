<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textWhite"
                android:padding="@dimen/view_dimen_large">

    <ImageView
        android:id="@+id/imageView_listItem_projectImage"
        android:layout_width="@dimen/widget_dimen_X2_large"
        android:layout_height="@dimen/widget_dimen_X2_large"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/view_dimen_large"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder_project_image_main"/>

    <TextView
        android:id="@+id/textView_listItem_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView_listItem_projectImage"
        android:gravity="top|start"
        android:paddingTop="0dp"
        android:text="Potrero fire shoot"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_medium"/>

    <TextView
        android:id="@+id/textView_listItem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_listItem_header"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageView_listItem_projectImage"
        android:text="03:25"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_X_small"/>

    <TextView
        android:id="@+id/textView_listItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView_listItem_time"
        android:layout_alignParentEnd="true"
        android:text="03/16/2016"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_X_small"/>


    <!-- MyVideo components -->
    <ImageView
        android:id="@+id/icon_listIItem_videoCount"
        android:layout_width="@dimen/view_dimen_large"
        android:layout_height="@dimen/view_dimen_large"
        android:layout_alignBottom="@id/imageView_listItem_projectImage"
        android:layout_marginTop="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/imageView_listItem_projectImage"
        android:src="@mipmap/ic_videocam_grey_400_24dp"/>

    <TextView
        android:id="@+id/textView_listItem_videoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_listIItem_videoCount"
        android:layout_marginStart="@dimen/view_dimen_X_small"
        android:layout_toEndOf="@id/icon_listIItem_videoCount"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:text="14"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_X_small"/>

    <!-- Audio components-->
    <ImageView
        android:id="@+id/icon_listItem_audioCount"
        android:layout_width="@dimen/view_dimen_large"
        android:layout_height="@dimen/view_dimen_large"
        android:layout_alignBottom="@id/imageView_listItem_projectImage"
        android:layout_marginStart="@dimen/view_dimen_large"
        android:layout_marginTop="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/textView_listItem_videoCount"
        android:src="@mipmap/ic_mic_grey_400_24dp"/>

    <TextView
        android:id="@+id/textView_listItem_audioCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_listItem_audioCount"
        android:layout_marginStart="@dimen/view_dimen_X_small"
        android:layout_toEndOf="@id/icon_listItem_audioCount"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:text="10"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_X_small"/>

    <!-- Location components-->
    <ImageView
        android:id="@+id/icon_listItem_location"
        android:layout_width="@dimen/view_dimen_large"
        android:layout_height="@dimen/view_dimen_large"
        android:layout_alignBottom="@id/imageView_listItem_projectImage"
        android:layout_marginStart="@dimen/view_dimen_large"
        android:layout_marginTop="@dimen/view_dimen_small"
        android:layout_toEndOf="@id/textView_listItem_audioCount"
        android:src="@mipmap/ic_marker_gray_36"/>

    <TextView
        android:id="@+id/textView_listItem_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon_listItem_audioCount"
        android:layout_marginStart="@dimen/view_dimen_X_small"
        android:layout_toEndOf="@id/icon_listItem_location"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/view_dimen_X_small"
        android:singleLine="true"
        android:text="San Francisco"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_X_small"/>

</RelativeLayout>