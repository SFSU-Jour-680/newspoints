<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout_projList_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <!--Recycler View to display lit of activities-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_projList_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/textViewStatic_projList_listInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="@dimen/view_dimen_large"
        android:paddingRight="@dimen/view_dimen_large"
        android:text="@string/projectList_info"
        android:textColor="@color/colorSecondaryTemp"
        android:textSize="@dimen/font_small"
        android:visibility="invisible"/>


    <!-- FAB to add new Activity-->
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_projList_addProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/view_dimen_large"
        android:layout_marginEnd="@dimen/view_dimen_small"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_icon="@mipmap/ic_action_new"/>
</RelativeLayout>
